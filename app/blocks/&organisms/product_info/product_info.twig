        </div>
        <div class="product-slider__pagination"></div>
      </div>
    </div>

    <div class="product-info__content">
      <div class="product-info__content-header">
        <div class="product-info__content-wrap">
          {% include "../../@atoms/rating/rating.twig" with {
            rating: {
              class: "product-info__rating",
              text: {
                text: 4.5
