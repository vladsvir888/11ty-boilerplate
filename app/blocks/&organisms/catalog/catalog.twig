<div class="section catalog">
  <div class="container catalog__container">
    {% include "../../^molecules/catalog_filter/catalog_filter.twig" with {
      catalog_filter: {
        class: "catalog__filter",
        header: {
          type: "online-shop"
        }
      }
    } %}

    <div class="catalog__cards">
      <ul class="catalog__list">
        {% for item in catalog.cards %}
          <li class="catalog__item">
            {% include "../../^molecules/product_card/product_card.twig" with {
              product_card: item
            } %}
          </li>
        {% endfor %}
      </ul>

      <div class="catalog__cards-bottom">
        {% include "../../@atoms/button/button.twig" with {
          button: {
            class: "btn--btn btn--tertiary catalog__cards-more",
            text: {
              text: "Показать еще"
            }
          }
        } %}

        {% include "../../^molecules/pagination/pagination.twig" with {
          pagination: {
            items: [{
              href: "#",
              text: {
                text: "1"
              },
              current_page: true
            }, {
              href: "#",
              text: {
                text: "2"
              }
            }, {
              href: "#",
              text: {
                text: "3"
              }
            }, {
              href: "#",
              text: {
                text: "..."
              }
            }, {
              href: "#",
              text: {
                text: "15"
              }
            }]
          }
        } %}
      </div>
    </div>
  </div>
</div>