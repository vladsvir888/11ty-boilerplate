    <div class="portal-burger-menu__bottom">
      <div class="portal-burger-menu__grid">
        <div class="portal-burger-menu__grid-item portal-burger-menu__grid-item--consultation">
          {% include "../../@atoms/title/title.twig" with {
            title: {
              level: 2,
              class: "portal-burger-menu__grid-title",
              text: "Получить консультацию"
            }
          } %}

          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "btn--btn btn--sixanary portal-burger-menu__grid-link",
              text: {
                text: "Обратная связь"
              }
            }
          } %}
        </div>
        <div class="portal-burger-menu__grid-item portal-burger-menu__grid-item--mobile-app">
          {% include "../../@atoms/title/title.twig" with {
            title: {
              level: 2,
              class: "portal-burger-menu__grid-title",
              text: "Наше мобильное приложение"
            }
          } %}

          {% include "../../@atoms/button/button.twig" with {
            button: {
              href: "#",
              class: "btn--btn btn--sixanary portal-burger-menu__grid-link",
              text: {
                text: "Скачать в Google Play"
              },
              icon: {
                name: "sprite-mono.svg#google-play"
              }
            }
          } %}

          {% include "../../@atoms/button/button.twig" with {
            button: {
              href: "#",
              class: "btn--btn btn--sixanary portal-burger-menu__grid-link",
              text: {
                text: "Скачать в App Store"
              },
              icon: {
                name: "sprite-mono.svg#app-store"
              }
            }
          } %}
        </div>
        <div class="portal-burger-menu__grid-item portal-burger-menu__grid-item--socials">
          {% include "../../@atoms/title/title.twig" with {
            title: {
              level: 2,
              class: "portal-burger-menu__grid-title",
              text: "Мы в социальных сетях"
            }
          } %}

          {% include "../../@atoms/socials/socials.twig" with {
            socials: {
              items: [{
                attrs: "aria-label='Инстаграм'",
                icon: {
                  class: "socials__icon",
                  name: "sprite-mono.svg#instagram"
                }
              }, {
                attrs: "aria-label='Ютуб'",
                icon: {
                  class: "socials__icon",
                  name: "sprite-mono.svg#youtube"
                }
              }, {
                attrs: "aria-label='Вконтакте'",
                icon: {
                  class: "socials__icon",
                  name: "sprite-mono.svg#vk"
                }
              }, {
                attrs: "aria-label='Фейсбук'",
                icon: {
                  class: "socials__icon",
                  name: "sprite-mono.svg#fb"
                }
              }]
            }
          } %}
        </div>
      </div>
    </div>
  </div>
</sl-drawer>