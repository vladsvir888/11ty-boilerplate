      }] %}

      {% for col in cols %}
        <div class="portal-burger-menu__col">
          {% for item in col.items %}
            <div class="portal-burger-menu__col-item">
              {% if item.title %}
                {% include "../../@atoms/title/title.twig" with {
                  title: item.title|default({})|merge({
                    class: "portal-burger-menu__title",
                    level: 2,
                  })
                } %}
              {% endif %}

              {% for link in item.links %}
                {% include "../../@atoms/button/button.twig" with {
                  button: link|default({})|merge({
                    href: "#",
                    class: "btn--link portal-burger-menu__link",
                  })
                } %}
              {% endfor %}
            </div>
          {% endfor %}
        </div>
      {% endfor %}
