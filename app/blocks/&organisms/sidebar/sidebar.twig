<aside class="sidebar {{ sidebar.class }}">
  <div class="sidebar__header">
    {% include "../../@atoms/logo/logo.twig" with {
      logo: {
        type: "sidebar-portal"
      }
    } %}

    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "sidebar__burger",
        icons: [{
          class: "sidebar__burger-icon sidebar__burger-icon--menu",
          name: "sprite-multi.svg#menu-p"
        }, {
          class: "sidebar__burger-icon sidebar__burger-icon--close",
          name: "sprite-mono.svg#close"
        }],
        attrs: "aria-label='Открыть меню'"
      }
    } %}
  </div>
  <div class="sidebar__body">
    <nav class="sidebar__nav">
      <ul class="sidebar__list">
        <li class="sidebar__item">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "sidebar__btn",
              href: "#",
              text: {
                text: "Каталог"
              },
              icon: {
                class: "sidebar__icon",
                name: "sprite-mono.svg#square-p"
              },
              attrs: "aria-current='true'"
            }
          } %}
        </li>
        <li class="sidebar__item">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "sidebar__btn",
              href: "#",
              text: {
                text: "Мои заказы"
              },
              icon: {
                class: "sidebar__icon",
                name: "sprite-mono.svg#square-with-check-p"
              }
            }
          } %}
        </li>
        <li class="sidebar__item">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "sidebar__btn",
              href: "#",
              text: {
                text: "Мой профиль"
              },
              icon: {
                class: "sidebar__icon",
                name: "sprite-mono.svg#user-p"
              }
            }
          } %}
        </li>
        <li class="sidebar__item">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "sidebar__btn",
              href: "#",
              text: {
                text: "Мои ПВЗ"
              },
              icon: {
                class: "sidebar__icon",
                name: "sprite-mono.svg#house-p"
              }
            }
          } %}
        </li>
      </ul>
    </nav>
  </div>
  <div class="sidebar__footer">
    <div class="sidebar__time">с 09:00 до 18:00 по будням</div>

    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "btn--link sidebar__phone",
        href: "tel:+74997540910",
        text: {
          text: "+7 (499) 754-09-10"
        }
      }
    } %}

    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "btn--link sidebar__mail",
        href: "mailto:info@vintegra.ru",
        text: {
          text: "info@vintegra.ru"
        }
      }
    } %}

    <div class="sidebar__copyright">
      <small>Copyright © Vintegra 2023</small>
    </div>
  </div>
</aside>
