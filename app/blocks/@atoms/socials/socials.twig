<div class="socials {{ socials.class }}">
  {% if socials.text %}
    <div class="socials__text">
      {{ socials.text }}
    </div>
  {% endif %}

  <ul class="socials__list">
    {% for item in socials.items %}
      <li class="socials__item">
        {% include "../../@atoms/button/button.twig" with {
          button: item|default({})|merge({
            href: "#",
            class: "socials__btn",
          })
        } %}
      </li>
    {% endfor %}
  </ul>
</div>