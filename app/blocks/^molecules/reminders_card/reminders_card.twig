<article class="reminders-card">
  <div class="reminders-card__status status status--{{ reminders_card.status.type }}">
    {{ reminders_card.status.text }}
  </div>

  {% include "../../@atoms/title/title.twig" with {
    title: reminders_card.title|default({})|merge({
      class: "reminders-card__title",
      text: "Заказ №365 от 14.09.2023г.",
      link: true
    })
  } %}

  <div class="reminders-card__text">
    {{ reminders_card.text }}
  </div>

  {% if reminders_card.button %}
    {% include "../../@atoms/button/button.twig" with {
      button: {
        href: "#",
        class: "btn--btn btn--primary reminders-card__btn",
        text: {
          text: "Оплатить"
        }
      }
    } %}
  {% endif %}

  {% if reminders_card.place %}
    <div class="reminders-card__place">
      г. Москва, ул. Тарханская, д. 4
    </div>
  {% endif %}
</article>