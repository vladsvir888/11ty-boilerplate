<nav class="pagination {{ pagination.class }}" aria-label="Пагинация">
  {% if pagination.prev_btn %}
    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "pagination__toggle pagination__toggle-prev",
        icon: {
          class: "pagination__toggle-icon",
          name: "sprite-mono.svg#arrow-prev"
        },
        attrs: "aria-label='Предыдущая страница' disabled"
      }
    } %}
  {% endif %}

  <ol class="pagination__list">
    {% for item in pagination.items %}
      <li class="pagination__item">
        {% if item.current_page %}
          {% include "../../@atoms/button/button.twig" with {
            button: item|default({})|merge({
              class: "pagination__btn",
              attrs: "aria-current='page'"
            })
          } %}
        {% else %}
          {% include "../../@atoms/button/button.twig" with {
            button: item|default({})|merge({
              class: "pagination__btn"
            })
          } %}
        {% endif %}
      </li>
    {% endfor %}
  </ol>

  {% if pagination.next_btn %}
    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "pagination__toggle pagination__toggle-next",
        icon: {
          class: "pagination__toggle-icon",
          name: "sprite-mono.svg#arrow-next"
        },
        attrs: "aria-label='Следующая страница'"
      }
    } %}
  {% endif %}
</nav>