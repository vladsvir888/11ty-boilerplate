<div class="order-card {{ order_card.class }}">
  <div class="order-card__title">
    Содержание заказа
  </div>

  <div class="order-card__center">
    <div class="order-card__titles">
      <div class="order-card__titles-text">
        Общее количество товаров:
      </div>

      <div class="order-card__titles-num">
        4 шт.
      </div>
    </div>

    <div class="order-card__discount">
      <div class="order-card__discount-text">
        Скидка:
      </div>

      <div class="order-card__discount-num">
        - 6 050 ₽
      </div>
    </div>
  </div>

  <div class="order-card__footer">
    <div class="order-card__footer-item">
      <div class="order-card__total">
        <div class="order-card__total-text order-card__total-text--small">Без скидки</div>
        <div class="order-card__total-text order-card__total-text--big">Итого</div>
      </div>

      <div class="order-card__total-num">
        1 273 650 ₽
      </div>
    </div>
    <div class="order-card__footer-item">
      <div class="order-card__total">
        <div class="order-card__total-text order-card__total-text--small">Со скидкой</div>
        <div class="order-card__total-text order-card__total-text--big">Итого</div>
      </div>

      <div class="order-card__total-num">
        1 267 600 ₽
      </div>
    </div>
  </div>

  {% include "../../@atoms/button/button.twig" with {
    button: order_card.btn|default({})|merge({
      class: "btn--btn btn--primary"
    })
  } %}
</div>