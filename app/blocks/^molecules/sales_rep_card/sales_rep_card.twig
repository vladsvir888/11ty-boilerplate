<article class="sales-rep-card">
  {% include "../../@atoms/image/image.twig" with {
    image: sales_rep_card.image
  } %}

  <div class="sales-rep-card__body">
    {% include "../../@atoms/title/title.twig" with {
      title: sales_rep_card.title
    } %}

    <div class="sales-rep-card__list">
      <div class="sales-rep-card__item">
        <div class="sales-rep-card__term">
          {% include "../../@atoms/icon/icon.twig" with {
            icon: {
              class: "sales-rep-card__term-icon",
              name: "sprite-mono.svg#location"
            }
          } %}
          Адрес:
        </div>
        <div class="sales-rep-card__descr">
          ул. Трудовая, д. 10
        </div>
      </div>
      <div class="sales-rep-card__item">
        <div class="sales-rep-card__term">
          {% include "../../@atoms/icon/icon.twig" with {
            icon: {
              class: "sales-rep-card__term-icon",
              name: "sprite-mono.svg#clock"
            }
          } %}
          Время работы:
        </div>
        <div class="sales-rep-card__descr">
          с 09:00 до 18:00 по будням
        </div>
      </div>
      <div class="sales-rep-card__item">
        <div class="sales-rep-card__term">
          {% include "../../@atoms/icon/icon.twig" with {
            icon: {
              class: "sales-rep-card__term-icon",
              name: "sprite-mono.svg#phone"
            }
          } %}
          Телефон:
        </div>
        <div class="sales-rep-card__descr">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              href: "tel:+74997540910",
              class: "btn--link",
              text: {
                text: "+7 (499) 754-09-10"
              }
            }
          } %}
        </div>
      </div>
      <div class="sales-rep-card__item">
        <div class="sales-rep-card__term">
          {% include "../../@atoms/icon/icon.twig" with {
            icon: {
              class: "sales-rep-card__term-icon",
              name: "sprite-mono.svg#metro"
            }
          } %}
          Станция метро:
        </div>
        <div class="sales-rep-card__descr">
          Красносельская
        </div>
      </div>
    </div>
  </div>
</article>