<article class="point-sale-card">
  {% include "../../@atoms/image/image.twig" with {
    image: {
      class: "point-sale-card__img",
      name: "point-sale-card/01.png",
      sizes: {
        width: 174,
        height: 144
      },
      alt: ""
    }
  } %}

  <div class="point-sale-card__content">
    {% include "../../@atoms/title/title.twig" with {
      title: {
        level: 2,
        class: "point-sale-card__title",
        text: "г. Москва, ул. Тарханская, д. 4",
        link: true,
      }
    } %}

    <dl class="point-sale-card__list">
      <div class="point-sale-card__item">
        <dt class="point-sale-card__term">
          Адрес:
        </dt>
        <dd class="point-sale-card__descr">
          ул. Трудовая, д. 10
        </dd>
      </div>
      <div class="point-sale-card__item">
        <dt class="point-sale-card__term">
          Телефон:
        </dt>
        <dd class="point-sale-card__descr">
          {% include "../../@atoms/button/button.twig" with {
            button: {
              class: "point-sale-card__link btn--link",
              href: "tel:+74997540910",
              text: {
                text: "+7 (499) 754-09-10"
              }
            }
          } %}
        </dd>
      </div>
      <div class="point-sale-card__item">
        <dt class="point-sale-card__term">
          Время работы:
        </dt>
        <dd class="point-sale-card__descr">
          с 09:00 до 18:00
        </dd>
      </div>
      <div class="point-sale-card__item">
        <dt class="point-sale-card__term">
          Станция метро:
        </dt>
        <dd class="point-sale-card__descr">
          Красносельская
        </dd>
      </div>
    </dl>
  </div>
</article>