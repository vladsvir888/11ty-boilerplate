<nav class="breadcrumbs {{ breadcrumbs.class }}" aria-label="Хлебные крошки">
  <ol class="breadcrumbs__list">
    {% for item in breadcrumbs.items %}
      <li class="breadcrumbs__item">
        {% if not loop.last %}
          {% include "../../@atoms/button/button.twig" with {
            button: item|default({})|merge({
              class: "breadcrumbs__btn " ~ item.class
            })
          } %}
        {% else %}
          <span aria-current="page">
            {{ item.text }}
          </span>
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>