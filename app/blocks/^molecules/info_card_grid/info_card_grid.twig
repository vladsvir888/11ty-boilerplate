<div class="info-card-grid section js-toggle-group-block">
  <div class="container info-card-grid__container">
    {% include "../../@atoms/form_control/form_control.twig" with {
      form_control: {
        view: "select",
        select: {
          label: "Сортировать по:",
          class: "info-card-grid__select",
          initial_value: "option-1",
          options: [{
            value: "option-1",
            text: "Самые новые сверху"
          }, {
            value: "option-2",
            text: "Самые старые сверху"
          }],
          attrs: "name='choice'"
        }
      }
    } %}

    <noscript class="info-card-grid__select">
      <form class="no-js-form" action="/" method="get">
        <div class="select-wrapper">
          <select class="select select--no-js" name="choice">
            <option value="option-1">Самые новые сверху</option>
            <option value="option-2">Самые старые сверху</option>
          </select>
        </div>
        {% include "../../@atoms/button/button.twig" with {
          button: {
            class: "btn--link no-js-form__btn",
            text: {
              text: "Отсортировать"
            }
          }
        } %}
      </form>
    </noscript>

    <div class="toggle-group info-card-grid__toggle-group" role="group" aria-label="Выбор новостей">
      {% include "../../@atoms/button/button.twig" with {
        button: {
          class: "toggle-group__btn js-toggle-group-block__btn",
          text: {
            text: "Активные"
          },
          attrs: "aria-pressed='false' type='button'"
        }
      } %}

      {% include "../../@atoms/button/button.twig" with {
        button: {
          class: "toggle-group__btn js-toggle-group-block__btn",
          text: {
            text: "Архивные"
          },
          attrs: "aria-pressed='true' type='button'"
        }
      } %}
    </div>

    {% include "../../^molecules/pagination/pagination.twig" with {
      pagination: {
        class: "info-card-grid__pagination info-card-grid__pagination--top",
        items: [{
          href: "",
          text: {
            text: "1"
          },
          current_page: true
        }, {
          href: "#",
          text: {
            text: "2"
          }
        }, {
          href: "#",
          text: {
            text: "3"
          }
        }, {
          href: "#",
          text: {
            text: "..."
          }
        }, {
          href: "#",
          text: {
            text: "15"
          }
        }]
      }
    } %}

    <div class="info-card-grid__content">
      {% for list in info_card_grid.lists %}
        <noscript>
          <div class="info-card-grid__text">
            {% if loop.first %}
              Активные
            {% else %}
              Архивные
            {% endif %}
          </div>
        </noscript>

        <ul
          class="js-toggle-group-block__content info-card-grid__list {{ list.class }}"
          {% if loop.first %}hidden{% endif %}
        >
          {% for item in list.items %}
            <li class="info-card-grid__item">
              {% include "../../^molecules/info_card/info_card.twig" with {
                info_card: item|default({})|merge({
                  class: "info-card--secondary"
                })
              } %}
            </li>
          {% endfor %}
        </ul>
      {% endfor %}
    </div>

    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "btn--btn btn--tertiary info-card-grid__more",
        text: {
          text: "Показать еще"
        }
      }
    } %}

    {% include "../../^molecules/pagination/pagination.twig" with {
      pagination: {
        class: "info-card-grid__pagination info-card-grid__pagination--bottom",
        items: [{
          href: "",
          text: {
            text: "1"
          },
          current_page: true
        }, {
          href: "#",
          text: {
            text: "2"
          }
        }, {
          href: "#",
          text: {
            text: "3"
          }
        }, {
          href: "#",
          text: {
            text: "..."
          }
        }, {
          href: "#",
          text: {
            text: "15"
          }
        }]
      }
    } %}
  </div>
</div>