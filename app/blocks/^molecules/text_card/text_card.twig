<div class="text-card">
  {% include "../../@atoms/title/title.twig" with {
    title: text_card.title|default({})|merge({
      class: "text-card__title"
    })
  } %}

  <div class="text-block text-card__text">
    {{ text_card.text }}
  </div>

  {% if text_card.btn %}
    {% include "../../@atoms/button/button.twig" with {
      button: {
        class: "btn--btn btn--primary text-card__btn",
        text: {
          text: "Получить обратную связь"
        }
      }
    } %}
  {% endif %}
</div>